<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar_color_control_normal"
    android:id="@+id/nytimes_fragment"
    android:scrollbars="vertical">


    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/toolbar_color_control_normal"
        app:theme="@style/NewYorkTimesColor"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/newyorktimes"
            android:textSize="40dp"/>
    </android.support.v7.widget.Toolbar>

    <ImageButton
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ny_bookmark_on"
        android:background="@null"
        android:id="@+id/bookmarkBtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        />
   <TextView
       android:layout_below="@id/bookmarkBtn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/title"
       android:textSize="30dp"
       android:textColor="@color/colorBlack"
       android:textStyle="italic|bold"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/image"
        android:src="@drawable/story_image_example"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_below="@id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:typeface="serif"
        android:id="@+id/headLine"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headLine"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:id="@+id/author"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="@string/ny_detail_readmore"
        android:layout_below="@id/author"
        android:layout_centerHorizontal="true"
        android:id="@+id/readMoreBtn"/>

</RelativeLayout>