<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDarkGray">

    <TextView
        android:id="@+id/wordExpanded"
        android:text=""
        android:textColor="#BBBBBB"
        android:textSize="35sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pronunciationExpanded"
        android:text=""
        android:textColor="#888888"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordExpanded"/>

    <TextView
        android:id="@+id/definitionsExpanded"
        android:text=""
        android:textColor="#BBBBBB"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pronunciationExpanded"/>

    <Button
        android:id="@+id/saveButton"
        android:text="@string/save_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/definitionsExpanded"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/deleteButton"
        android:text="@string/delete_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/definitionsExpanded"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/dictionaryProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="invisible"
        />

</RelativeLayout>